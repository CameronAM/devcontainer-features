{
  "name": "Use AWS credentials",
  "id": "use-aws-credentials",
  "version": "0.9.0",
  "description": "Mounts local AWS .aws directory into container and adds configuration environment variables",
  "mounts": [
    {
        "type": "bind",
        "source": "${localEnv:HOME}/.aws",
        "target": "/.aws"
    }
  ],
  "containerEnv": {
    "AWS_CONFIG_FILE": "/.aws/config",
    "AWS_SHARED_CREDENTIALS_FILE": "/.aws/credentials"
  }
}
